"""
Bu script hazır olduğunda websitenin codebase ine şunu ekleyelim : 

from youtubeapi.upload_video import get_authenticated_service, initialize_upload

# ...

# Get the authenticated YouTube service
youtube = get_authenticated_service(args)

# Initialize the upload
initialize_upload(youtube, options)
"""

import os

CLIENT_SECRET_FILE = '/path/to/client_secret.json'
API_NAME = 'youtube'
API_VERSION = 'v3'
SCOPES = ['https://www.googleapis.com/auth/youtube.upload']
DEVELOPER_TAG = 'Your Developer Tag'
PRIVACY_STATUS = 'private'
FILE_LOCATION = '/path/to/video.mp4'
VIDEO_TITLE = 'My Video Title'
VIDEO_DESCRIPTION = 'My Video Description'
KEYWORDS = ['keyword1', 'keyword2', 'keyword3']

args = [
    '--client_secrets', CLIENT_SECRET_FILE,
    '--api_name', API_NAME,
    '--api_version', API_VERSION,
    '--scope', SCOPES,
    '--developer_tag', DEVELOPER_TAG,
    '--privacy_status', PRIVACY_STATUS,
    '--file', FILE_LOCATION,
    '--title', VIDEO_TITLE,
    '--description', VIDEO_DESCRIPTION,
    '--keywords', ','.join(KEYWORDS)
]

initialize_upload(args)